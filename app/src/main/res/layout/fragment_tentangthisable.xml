<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Toolbar
        android:id="@+id/tbtentangThisable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:navigationIcon="@drawable/ic_baseline_chevron_left_24"
        android:title="@string/label_tentangThisable"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logoThisable_TentangThisable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tbtentangThisable" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_16sp"
        android:justificationMode="inter_word"
        android:padding="@dimen/dimen_16sp"
        android:text="@string/par_tentangThisable"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/logoThisable_TentangThisable" />

</androidx.constraintlayout.widget.ConstraintLayout>